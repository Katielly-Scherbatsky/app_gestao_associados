    :root {
      --primary-color: #20332C;
      --secondary-color: #1A7352;
      --light-color: #fff;
      --text-color: #333;
      --background-gradient: linear-gradient(135deg, #f5f7fa, #c3cfe2);
    }

    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background: var(--background-gradient);
      display: flex;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      width: 250px;
      height: 100%;
      background-color: var(--primary-color);
      color: var(--light-color);
      padding: 20px;
      box-sizing: border-box;
    }

    .sidebar h2 {
      margin-top: 0;
      font-size: 22px;
    }

    .sidebar a {
      display: block;
      color: var(--light-color);
      text-decoration: none;
      margin-bottom: 10px;
      padding: 10px;
      border-radius: 4px;
      transition: background 0.3s ease;
    }

    .sidebar a:hover {
      background-color: var(--secondary-color);
    }

    .main-content {
      margin-left: 250px;
      width: calc(100% - 250px);
      padding: 65px 80px;
      box-sizing: border-box;
      min-height: 100vh;
    }

    .content-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      color: var(--text-color);
      margin-bottom: 20px;
    }

    .chamada-section {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .chamada-container {
      background-color: var(--light-color);
      width: 800px;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      padding: 40px 60px;
      transition: transform 0.3s ease;
    }

    .chamada-container:hover {
      transform: translateY(-5px);
    }

    .title-section {
      text-align: center;
      margin-bottom: 20px;
    }

    .chamada-title {
      font-size: 28px;
      font-weight: bold;
      color: var(--primary-color);
      margin-bottom: 10px;
    }

    .subtitle {
      font-size: 16px;
      color: var(--text-color);
      margin: 0;
    }

    .associados-list {
      display: flex;
      flex-direction: column;
      width: 100%;
      margin-top: 20px;
    }

    .associado-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 15px 10px;
      border-bottom: 1px solid #e0e0e0;
      transition: background 0.3s ease;
    }

    .associado-item:hover {
      background-color: #f9f9f9;
    }

    .associado-nome {
      font-size: 16px;
      font-weight: 500;
      color: var(--text-color);
    }

    .toggle-presenca {
      position: relative;
      display: inline-block;
      width: 60px;
      height: 34px;
    }

    .toggle-presenca input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #ccc;
      transition: 0.4s;
      border-radius: 34px;
    }

    .slider:before {
      position: absolute;
      content: "";
      height: 26px;
      width: 26px;
      left: 4px;
      bottom: 4px;
      background-color: white;
      transition: 0.4s;
      border-radius: 50%;
    }

    input:checked+.slider {
      background-color: var(--primary-color);
    }

    input:checked+.slider:before {
      transform: translateX(26px);
    }

    .button-container {
      display: flex;
      width: 200px;
      justify-content: flex-end;
      margin-top: 30px;
      margin-left: auto;
    }

    .submit-button {
      width: 100%;
      padding: 12px 0;
      border: none;
      border-radius: 6px;
      background-color: var(--primary-color);
      color: var(--light-color);
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .submit-button:hover {
      background-color: var(--secondary-color);
    }

    .aviso-section {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .aviso-container {
      background-color: var(--light-color);
      width: 800px;
      max-width: 100%;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      padding: 40px 60px;
      transition: transform 0.3s ease;
    }

    .aviso-container:hover {
      transform: translateY(-5px);
    }

    .aviso-title {
      font-size: 28px;
      font-weight: bold;
      color: var(--primary-color);
      margin-bottom: 10px;
    }


    .form-section {
      width: 100%;
      margin-top: 20px;
    }

    .form-container {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .form-container-perfil {
      display: flex;
      gap: 20px;
    }

    .form-column {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .input-group,
    .input-item {
      display: flex;
      flex-direction: column;
    }

    .input-field {
      padding: 10px 12px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 16px;
      transition: border-color 0.3s ease;
    }

    .input-field:focus {
      outline: none;
      border-color: var(--primary-color);
    }

    .login-section {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 100%;
      padding: 40px;
    }

    .login-container {
      background-color: var(--light-color);
      width: 800px;
      max-width: 100%;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      padding: 40px 60px;
      transition: transform 0.3s ease;
    }

    .login-container:hover {
      transform: translateY(-5px);
    }

    .logo {
      font-size: 28px;
      font-weight: bold;
      color: var(--primary-color);
      margin-bottom: 10px;
    }

    .login-title {
      font-size: 24px;
      font-weight: 600;
      margin: 0;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
    }

    .modal-content {
      background-color: var(--light-color);
      border-radius: 10px;
      padding: 20px 40px;
      max-width: 600px;
      width: 90%;
      position: relative;
    }

    .close-button {
      position: absolute;
      top: 10px;
      right: 20px;
      font-size: 28px;
      font-weight: bold;
      color: var(--primary-color);
      cursor: pointer;
    }

    .tab-links {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    .tab {
      background-color: #e0e0e0;
      border: none;
      padding: 10px 20px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      color: #20332C;
      transition: background-color 0.3s ease;
    }

    .tab.active {
      background-color: var(--primary-color);
      color: var(--light-color);
    }

    .tab:hover:not(.active) {
      background-color: #d0d0d0;
    }

