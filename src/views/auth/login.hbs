<style>
  :root {
    --primary-color: #20332C;
    --secondary-color: #1A7352;
    --light-color: #fff;
    --text-color: #333;
    --background-gradient: linear-gradient(135deg, #f5f7fa, #c3cfe2);
  }

  /* Define altura total e evita scroll */
  html,
  body {
    margin: 0;
    height: 100%;
    overflow: hidden;
    font-family: 'Poppins', sans-serif;
    background: var(--background-gradient);
  }

  .login-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    /* Fixa a altura da viewport */
    box-sizing: border-box;
    padding: 65px 80px;
  }

  @media (max-width: 991px) {
    .login-section {
      padding: 20px;
    }
  }

  .login-container {
    background-color: var(--light-color);
    width: 432px;
    max-width: 100%;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    padding: 40px 60px;
    transition: transform 0.3s ease;
  }

  .login-container:hover {
    transform: translateY(-5px);
  }

  @media (max-width: 991px) {
    .login-container {
      padding: 20px;
    }
  }

  .content-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--text-color);
  }

  .title-section {
    text-align: center;
    margin-bottom: 20px;
  }

  .logo {
    font-size: 28px;
    font-weight: bold;
    color: var(--primary-color);
    margin-bottom: 10px;
  }

  .login-title {
    font-size: 24px;
    font-weight: 600;
    margin: 0;
  }

  .subtitle {
    font-size: 14px;
    color: var(--text-color);
    margin-top: 5px;
  }

  .tab-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
  }

  .tab {
    background: none;
    border: none;
    font-size: 16px;
    cursor: pointer;
    padding: 10px 20px;
    color: var(--primary-color);
    transition: color 0.3s ease;
  }

  .tab:hover {
    color: var(--secondary-color);
  }

  .tab.active {
    border-bottom: 2px solid var(--primary-color);
    font-weight: bold;
  }

  .form-section {
    width: 100%;
  }

  .form-container {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .input-group,
  .input-item {
    display: flex;
    flex-direction: column;
  }

  .input-field {
    padding: 10px 12px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 14px;
    transition: border-color 0.3s ease;
  }

  .input-field:focus {
    outline: none;
    border-color: var(--primary-color);
  }

  .button-container {
    display: flex;
    justify-content: center;
    margin-top: 30px;
  }

  .submit-button {
    padding: 12px 0;
    width: 100%;
    border: none;
    border-radius: 6px;
    background-color: var(--primary-color);
    color: var(--light-color);
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .submit-button:hover {
    background-color: var(--secondary-color);
  }
</style>

<div class="login-section">
  <div class="login-container">
    <div class="content-container">
      <div class="title-section">
        <div class="logo">{{title}}</div>
        <h2 class="login-title" id="form-title">Login</h2>
        <p class="subtitle" id="form-subtitle">Acesse sua Conta</p>
      </div>
      <div class="tab-links">
        <button id="login-tab" class="tab active">Login</button>
        <button id="register-tab" class="tab">Registrar</button>
      </div>

      <!-- Formulário de Login -->
      <form id="login-form" class="form-section">
        <div class="form-container">
          <div class="input-group">
            <label for="login-email" class="visually-hidden">E-mail</label>
            <input id="login-email" class="input-field" type="email" placeholder="E-mail" aria-label="E-mail" required>
          </div>
          <div class="input-item">
            <label for="login-password" class="visually-hidden">Senha</label>
            <input id="login-password" class="input-field" type="password" placeholder="Senha" aria-label="Senha" required>
          </div>
        </div>
        <div class="button-container">
          <button type="submit" class="submit-button">Entrar</button>
        </div>
      </form>

      <!-- Formulário de Registro -->
      <form id="register-form" class="form-section" style="display: none;">
        <div class="form-container">
          <div class="input-group">
            <label for="register-email" class="visually-hidden">E-mail</label>
            <input id="register-email" class="input-field" type="email" placeholder="E-mail" aria-label="E-mail" required>
          </div>
          <div class="input-item">
            <label for="register-password" class="visually-hidden">Senha</label>
            <input id="register-password" class="input-field" type="password" placeholder="Senha" aria-label="Senha" required>
          </div>
          <div class="input-item">
            <label for="register-confirm-password" class="visually-hidden">Confirmar Senha</label>
            <input id="register-confirm-password" class="input-field" type="password" placeholder="Confirmar Senha" aria-label="Confirmar Senha" required>
          </div>
        </div>
        <div class="button-container">
          <button type="submit" class="submit-button">Registrar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Elementos de troca de abas
    const loginTab = document.getElementById("login-tab");
    const registerTab = document.getElementById("register-tab");
    const loginForm = document.getElementById("login-form");
    const registerForm = document.getElementById("register-form");
    const formTitle = document.getElementById("form-title");
    const formSubtitle = document.getElementById("form-subtitle");

    loginTab.addEventListener("click", function () {
      loginTab.classList.add("active");
      registerTab.classList.remove("active");
      loginForm.style.display = "block";
      registerForm.style.display = "none";
      formTitle.textContent = "Login";
      formSubtitle.textContent = "Acesse sua Conta";
    });

    registerTab.addEventListener("click", function () {
      registerTab.classList.add("active");
      loginTab.classList.remove("active");
      registerForm.style.display = "block";
      loginForm.style.display = "none";
      formTitle.textContent = "Registrar";
      formSubtitle.textContent = "Crie sua Conta";
    });

    // Submissão do formulário de Login
    loginForm.addEventListener("submit", async function (event) {
      event.preventDefault();

      const email = document.getElementById("login-email").value;
      const password = document.getElementById("login-password").value;

      const response = await fetch("/login", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ email, password }),
      });

      const result = await response.json();
      if (response.ok) {
        alert("Login realizado com sucesso!");
        window.location.href = "/dashboard";
      } else {
        alert("Erro: " + result.message);
      }
    });

    // Submissão do formulário de Registro
    registerForm.addEventListener("submit", async function (event) {
      event.preventDefault();

      const email = document.getElementById("register-email").value;
      const password = document.getElementById("register-password").value;
      const confirmPassword = document.getElementById("register-confirm-password").value;

      if (password !== confirmPassword) {
        alert("As senhas não coincidem!");
        return;
      }

      const response = await fetch("/cadastrar", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ email, password }),
      });

      const result = await response.json();
      if (response.ok) {
        alert("Usuário cadastrado com sucesso!");
        loginTab.click();
      } else {
        alert("Erro: " + result.message);
      }
    });
  });
</script>